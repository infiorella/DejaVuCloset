<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvTituloCarrito"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tarjeta"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="358dp"
            android:layout_height="163dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUrlC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cardigan6" />

                <Space
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTituloC"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textColor="@color/gris_boton"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tvPrecioC"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="TextView"
                        android:textColor="@color/gris_boton"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvTallaC"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:text="TextView"
                        android:textColor="@color/gris_boton"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvCantidadC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui"
                        android:text="TextView"
                        android:textColor="@color/gris_boton"
                        android:textSize="15sp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/ibQuitarC"
                    android:layout_width="47dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    app:srcCompat="@drawable/icon_exit" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>