<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleProducto">


    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="416dp"
        android:layout_height="370dp"
        android:background="@drawable/shadow"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="334dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="bottom"
            android:text="TextView"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/desProducto" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/segoe_ui"
            android:text="Tama単o"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/talla"
            android:layout_width="331dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tallaXS"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="XS"
                android:textColor="@color/gris_boton" />

            <RadioButton
                android:id="@+id/tallaS"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="S"
                android:textColor="@color/gris_boton" />

            <RadioButton
                android:id="@+id/tallaM"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui"
                android:text="M"
                android:textColor="@color/gris_boton" />

            <RadioButton
                android:id="@+id/tallaL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/segoe_ui"
                android:text="L"
                android:textColor="@color/gris_boton" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/segoe_ui"
            android:text="Cantidad"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnQuitar"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_remove" />

            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="1"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/btnAumentar"
                android:layout_width="44dp"

                android:layout_height="34dp"
                android:background="@color/white"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icon_add" />

            <TextView
                android:id="@+id/textVie16"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:gravity="right"
                android:text="S/."
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="120"
                android:textSize="22sp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btnA単adir"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/gradient"
            android:drawableStart="@drawable/cart_white"
            android:fontFamily="@font/poppins_light"
            android:onClick="a単adir"
            android:text="A単adir"
            android:textAllCaps="false"
            android:textSize="17sp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="415dp"
        android:layout_height="512dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="94dp"
        android:layout_height="79dp"
        android:onClick="irAtras"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_back" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:onClick="irCarrito"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bag" />
</androidx.constraintlayout.widget.ConstraintLayout>